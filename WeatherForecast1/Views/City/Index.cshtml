@model List<WeatherForecast1.Models.City>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-3">
        <h2>Choose city ...</h2>
        <ul class="list-group">
            @foreach (var c in Model)
            {
                <li class="list-group-item">@Html.ActionLink(string.Format("{0}", c.name), "GetForecastFor", "Forecast", new { city = c.name }, null)</li>
            }
        </ul>
    </div>

    <div class="col-md-9">
        <h2>... or find your one</h2>
        @using (Html.BeginForm("GetForecastFor", "Forecast", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.TextBox("city", null, new { @class = "form-control" })
            </div>
                <button type="submit" class="btn btn-default">Find</button>
            
        }
        </div>
            
</div>